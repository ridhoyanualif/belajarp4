<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <main>
      <div class="login-container">
        <h2><%= title %></h2>
        <% if (data.length > 0) { %>
          <% data.forEach((d) => { %>
        <form action="/edit-materi/<%= d.id %>" method="POST" class="login-form">
              <input type="hidden" id="id" name="id" value="<%= d.id %>" />
            <div class="form-group">
                <label for="judul">Judul</label>
                <input type="text" id="judul" name="judul" value="<%= d.judul%>" required>
            </div>
            <div class="form-group">
                <label for="narsum">Narasumber</label>
                <input type="text" id="narsum" name="narsum" value="<%= d.narsum%>" required>
            </div>
            <button type="submit" class="login-btn">Submit</button>
        </form>
        <% }); %>
    </div>
    <% } else { %>
      <p>Belum tersedia data</p>
      <% } %>
      </main>
</body>
</html>
